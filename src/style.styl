
html
    font-family: 'Roboto', sans-serif
    user-select: none

body
    margin: 0

#loadingScreen
    position: fixed
    top: 0
    bottom: 0
    left: 0
    right: 0
    background-color: #181818
    &.active
        z-index: 10

#logo
    position: fixed
    width: 100%
    height: 100%

#loadingMsg
    position: fixed
    right: 0
    bottom: 0
    color: #FAFAFA
    margin-right: 20px
    text-align: center
    font-weight: normal

.dg.main
    position: fixed
    bottom: 0px
    left: 8px
    z-index: 5

canvas
    position: fixed

#doorbell-button
#doorbell-submit-button
    background-color: #1E88E5
    border: 0
    &:hover
        background-color: #1976D2

#doorbell-button
    z-index: 5

#doorbell-form
    box-shadow: none !important
    border: 0
    text-align: right
    fieldset
        text-align: center
        #intro-text
            margin-bottom: 10px

#doorbell-tags
    display: flex
    justify-content: space-between
    margin-bottom: 10px
    div
        font-weight: normal
        cursor: pointer
        border-radius: 4px
        padding: 4px
        border: 2px solid white
        color: white
        &:hover
            opacity: 0.8
        &.active
            border: 2px solid black
